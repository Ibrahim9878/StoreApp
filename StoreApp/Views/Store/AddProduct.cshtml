@model Product

@{
	ViewData["Title"] = "Add Product";
}

<h2>Add Product</h2>

<form asp-action="AddProduct" method="post">
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Price"></label>
		<input asp-for="Price" class="form-control" />
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Category"></label>
		<section asp-for="Category" class="form-control">
			<select asp-for="Category" asp-items="ViewBag.Categories" class="form-control">
				<option value="CategoryId">-- Select Category --</option>
			</select>
		</section>
		<span asp-validation-for="Category" class="text-danger"></span>
	</div>

	<button asp-action="AddProduct" type="submit" class="btn btn-primary mt-2">Add Product</button>
</form>



